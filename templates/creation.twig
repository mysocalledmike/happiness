{% block scripts %}
<script>
const CREATION_URL = '{{ sender.creation_url }}';
const SENDER_DATA = {{ sender|json_encode|raw }};
let rowCount = 10;

// Emotion options
const emotions = [
    { id: 'happy', emoji: 'üòä', label: 'Happy' },
    { id: 'grateful', emoji: 'üôè', label: 'Grateful' },
    { id: 'love', emoji: '‚ù§Ô∏è', label: 'Love' },
    { id: 'excited', emoji: 'ü§©', label: 'Excited' },
    { id: 'sad', emoji: 'üò¢', label: 'Sad' }
];

// Initialize
document.addEventListener('DOMContentLoaded', function() {
    initializePageTheme();
    setupAutoSave();
    populateMessages();
    setupButtons();
});

function showPublishModal() {
    // Check if there are new messages to send
    const newMessages = getNewMessages();
    if (newMessages.length === 0) {
        showNoNewMessagesModal();
        return;
    }

    const modal = document.getElementById('publishModal');
    modal.style.display = 'flex';
    modal.classList.add('show');
}

function getNewMessages() {
    const messages = [];
    const rows = document.querySelectorAll('.message-row');

    rows.forEach(row => {
        const email = row.querySelector('.email-input').value.trim();
        const message = row.querySelector('.message-input').value.trim();
        const sentStatus = row.querySelector('.sent-status');
        const statusText = sentStatus ? sentStatus.textContent.trim() : '';

        // Check if message is not sent (either has üöß or is empty but has content)
        const isNotSent = statusText === 'üöß' || (statusText === '' && email && message);

        if (email && message && isNotSent) {
            messages.push({
                email: email,
                message: message
            });
        }
    });

    return messages;
}

function closePublishModal() {
    const modal = document.getElementById('publishModal');
    modal.classList.remove('show');
    setTimeout(() => {
        modal.style.display = 'none';
    }, 300); // Wait for transition
}

function confirmPublish() {
    closePublishModal();
    publishPage();
}

function showNoNewMessagesModal() {
    const modal = document.getElementById('noNewMessagesModal');
    modal.style.display = 'flex';
    modal.classList.add('show');
}

function closeNoNewMessagesModal() {
    const modal = document.getElementById('noNewMessagesModal');
    modal.classList.remove('show');
    setTimeout(() => {
        modal.style.display = 'none';
    }, 300); // Wait for transition
}

// Theme Picker Functions
function toggleThemePicker() {
    const picker = document.getElementById('themePicker');
    const isVisible = picker.style.display !== 'none';

    if (isVisible) {
        picker.style.display = 'none';
    } else {
        picker.style.display = 'block';

        // Mark current theme as selected
        const currentTheme = SENDER_DATA.theme || 'rosie';
        document.querySelectorAll('.theme-option-mini').forEach(option => {
            option.classList.remove('selected');
            if (option.dataset.theme === currentTheme) {
                option.classList.add('selected');
            }
        });

        // Close when clicking outside
        setTimeout(() => {
            document.addEventListener('click', handleThemePickerOutsideClick);
        }, 0);
    }
}

function handleThemePickerOutsideClick(event) {
    const picker = document.getElementById('themePicker');
    const wrapper = document.querySelector('.theme-picker-wrapper');

    if (!wrapper.contains(event.target)) {
        picker.style.display = 'none';
        document.removeEventListener('click', handleThemePickerOutsideClick);
    }
}

function selectTheme(themeId, backgroundColor) {
    // Update UI immediately
    updateCharacterDisplay(themeId);
