    }, 1000));
}

// Save messages
function saveMessages() {
    const messages = [];
    const rows = document.querySelectorAll('.message-row');
    
    rows.forEach(row => {
        const email = row.querySelector('.email-input').value.trim();
        const name = row.querySelector('.name-input').value.trim();
        const message = row.querySelector('.message-input').value.trim();
        const emotion = row.querySelector('.emotion-select').value;
        
        if (email && message) {
            messages.push({
                recipient_email: email,
                recipient_name: name,
                message: message,
                emotion: emotion
            });
        }
    });
    
    const data = { messages: messages };
    
    fetch(`/api/create/${CREATION_URL}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify(data)
    })
    .then(response => response.json())
    .catch(error => {
        console.error('Save error:', error);
    });
}

// Populate messages table
function populateMessages() {
    const table = document.getElementById('messagesTable');
    const existingMessages = SENDER_DATA.messages || [];
    
    // Clear existing rows
    table.innerHTML = '';
    
    // Create rows - always show at least rowCount, but also 5 extra beyond existing messages
    const totalRows = Math.max(rowCount, existingMessages.length + 5);
    for (let i = 0; i < totalRows; i++) {
        const message = existingMessages[i] || {};
        table.appendChild(createMessageRow(message, i));
    }
}

function createMessageRow(message, index) {
    const row = document.createElement('div');
    row.className = 'message-row';

    // Determine sent status emoji
    let sentEmoji = '';
    if (message.recipient_email && message.message) {
        if (message.is_sent) {
            sentEmoji = '‚úÖ';
        } else {
            sentEmoji = 'üöß';
        }
    }

    row.innerHTML = `
        <div class="col-name">
            <input type="text" class="name-input" placeholder="John Doe" value="${message.recipient_name || ''}">
        </div>
        <div class="col-email">
            <input type="email" class="email-input" placeholder="john@example.com" value="${message.recipient_email || ''}">
        </div>
        <div class="col-message">
            <textarea class="message-input" placeholder="I'll really miss working with you...">${message.message || ''}</textarea>
        </div>
        <div class="col-emotion">
            <select class="emotion-select">
                ${emotions.map(e =>
                    `<option value="${e.id}" ${message.emotion === e.id ? 'selected' : ''}>${e.emoji} ${e.label}</option>`
                ).join('')}
            </select>
        </div>
        <div class="col-sent">
            <span class="sent-status" title="${message.is_sent ? 'Message sent' : (sentEmoji ? 'Not sent yet' : '')}">${sentEmoji}</span>
        </div>
    `;

    // Add event listeners to update sent status when content changes
    row.addEventListener('input', function() {
        updateRowSentStatus(row);
    });

    return row;
}

function updateRowSentStatus(row) {
    const email = row.querySelector('.email-input').value.trim();
    const message = row.querySelector('.message-input').value.trim();
    const sentStatusSpan = row.querySelector('.sent-status');

    if (email && message) {
        // Has content but hasn't been sent yet (new content)
        const currentIcon = sentStatusSpan.textContent;
        if (currentIcon !== '‚úÖ') { // Don't change if already sent
            sentStatusSpan.textContent = 'üöß';
            sentStatusSpan.title = 'Not sent yet';
        }
    } else {
        // No content, remove icon
        sentStatusSpan.textContent = '';
        sentStatusSpan.title = '';
    }
}

function addMoreRows() {
    rowCount += 10;
    populateMessages();
}

// Utility function
function debounce(func, wait) {
    let timeout;
    return function executedFunction(...args) {
        const later = () => {
            clearTimeout(timeout);
            func(...args);
        };
        clearTimeout(timeout);
        timeout = setTimeout(later, wait);
    };
}

