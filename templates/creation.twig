function publishPage() {
    const publishBtn = document.getElementById('publishBtn');
    if (publishBtn) {
        publishBtn.disabled = true;
        publishBtn.textContent = 'Sending...';
    }

    fetch(`/api/publish/${CREATION_URL}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('üéâ Messages sent successfully! ' + (data.emails_sent || 0) + ' emails were sent.');

            // Update the sent status for messages that were just sent
            updateSentStatusIndicators();
        } else {
            alert('Error sending messages: ' + data.message);
        }
    })
    .catch(error => {
        alert('An error occurred while sending messages');
    })
    .finally(() => {
        if (publishBtn) {
            publishBtn.disabled = false;
            publishBtn.textContent = 'Send New Messages';
        }
    });
}

function updateSentStatusIndicators() {
    const rows = document.querySelectorAll('.message-row');

    rows.forEach(row => {
        const email = row.querySelector('.email-input').value.trim();
        const message = row.querySelector('.message-input').value.trim();
        const sentStatusSpan = row.querySelector('.sent-status');

        // If the row has email and message, mark it as sent
        if (email && message && sentStatusSpan) {
            sentStatusSpan.textContent = '‚úÖ';
            sentStatusSpan.title = 'Message sent';
        }
    });
}
