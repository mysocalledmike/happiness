// Main Message Editing Functions
let isEditingMainMessage = false;

function editMainMessage() {
    if (isEditingMainMessage) return;

    const display = document.getElementById('mainMessageDisplay');
    const currentText = display.textContent;

    // Create input
    const input = document.createElement('input');
    input.type = 'text';
    input.value = currentText;
    input.className = 'main-message-display main-message-editing';
    input.style.fontSize = '1.8rem';
    input.style.width = '100%';

    // Replace display with input
    display.parentNode.replaceChild(input, display);
    input.focus();
    input.select();
    isEditingMainMessage = true;

    // Handle save
    function saveMainMessage() {
        const newText = input.value.trim() || 'You make me happy';

        // Create new display element
        const newDisplay = document.createElement('h2');
        newDisplay.className = 'main-message-display';
        newDisplay.id = 'mainMessageDisplay';
        newDisplay.textContent = newText;
        newDisplay.onclick = editMainMessage;
        newDisplay.title = 'Click to edit';

        // Replace input with display
        input.parentNode.replaceChild(newDisplay, input);
        isEditingMainMessage = false;

        // Save to server
        SENDER_DATA.overall_message = newText;
        saveSettings({overall_message: newText});
    }

    // Save on blur or enter
    input.addEventListener('blur', saveMainMessage);
    input.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            input.blur();
        }
    });
}

