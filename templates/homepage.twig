{% extends "layout.twig" %}

{% block content %}
<div class="homepage">
    <div class="hero-section">
        <h1 class="hero-title">Bring a smile to 1 billion faces</h1>
        <p class="hero-subtitle">Create personalized happiness messages for colleagues, classmates, and friends to spread joy and positivity.</p>
        
        <div class="smile-counter">
            <div class="smile-number">{{ smile_count|number_format }}</div>
            <div class="smile-label">smiles created so far</div>
        </div>
    </div>
    
    <div class="features-section">
        <div class="feature">
            <div class="feature-icon">ğŸ’</div>
            <h3>Personalized Messages</h3>
            <p>Create custom happiness messages for each person you want to uplift</p>
        </div>
        
        <div class="feature">
            <div class="feature-icon">ğŸ¨</div>
            <h3>Beautiful Themes</h3>
            <p>Choose from 8 unique themes to match your personality and style</p>
        </div>
        
        <div class="feature">
            <div class="feature-icon">ğŸ“±</div>
            <h3>Share Easily</h3>
            <p>Send your custom happiness page link to friends, family, and colleagues</p>
        </div>
    </div>

    <div class="leaderboard-section">
        <h2>Happiness Leaderboard</h2>
        <p>See who's spreading the most smiles!</p>

        <div class="leaderboard-table">
            <table>
                <thead>
                    <tr>
                        <th>Creator</th>
                        <th>Smiles Created</th>
                    </tr>
                </thead>
                <tbody>
                    {% for leader in leaderboard %}
                    <tr>
                        <td class="creator-cell">
                            {% if leader.slug %}
                                <a href="/{{ leader.slug }}" class="creator-link">{{ leader.email }}</a>
                            {% else %}
                                {{ leader.email }}
                            {% endif %}
                        </td>
                        <td class="smiles-cell">{{ leader.smile_count|number_format }}</td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="2" class="no-data">No happiness creators yet. Be the first!</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="signup-section">
        <h2>Ready to spread some happiness?</h2>
        <p>Create your own happiness page in seconds</p>

        <form id="signupForm" class="signup-form">
            <input type="email" id="signupEmail" placeholder="Enter your email address" required>
            <button type="submit">Create Your Page</button>
        </form>

        <div id="signupMessage" class="form-message hidden"></div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
// Clear any error messages when user starts typing
document.getElementById('signupEmail').addEventListener('input', function() {
    const messageDiv = document.getElementById('signupMessage');
    messageDiv.classList.add('hidden');
});

document.getElementById('signupForm').addEventListener('submit', function(e) {
    e.preventDefault();

    const email = document.getElementById('signupEmail').value.trim();
    const messageDiv = document.getElementById('signupMessage');
    const button = this.querySelector('button');

    if (!email) {
        showMessage('Please enter your email address', 'error');
        return;
    }

    button.disabled = true;
    button.textContent = 'Creating...';

    fetch('/api/signup', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ email: email })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            const creationUrl = data.creation_url;
            showMessage(`ğŸ‰ Page created! Check your email or <a href="/create/${creationUrl}" style="color: inherit; text-decoration: underline;">click here to get started</a>`, 'success');
            document.getElementById('signupEmail').value = '';
        } else {
            showMessage(data.message || 'An error occurred', 'error');
        }
    })
    .catch(error => {
        console.error('Signup error:', error);
        showMessage('An error occurred. Please try again.', 'error');
    })
    .finally(() => {
        button.disabled = false;
        button.textContent = 'Create Your Page';
    });

    function showMessage(text, type) {
        messageDiv.innerHTML = text;
        messageDiv.className = 'form-message ' + type;
        messageDiv.classList.remove('hidden');
    }
});
</script>
{% endblock %}