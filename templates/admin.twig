{% extends "layout.twig" %}

{% block body %}
{# Admin Header #}
<div class="admin-header">
    <div class="admin-header-content">
        <div style="display: flex; align-items: center; gap: 24px;">
            <a href="/" class="logo">1 Trillion Smiles</a>
            <h1 class="admin-title">Admin Dashboard</h1>
        </div>
        <div class="admin-stats">
            <div class="admin-stat">
                <div class="admin-stat-number">{{ users|length }}</div>
                <div class="admin-stat-label">Total</div>
            </div>
            <div class="admin-stat">
                {% set confirmed_count = users|filter(u => u.email_confirmed)|length %}
                <div class="admin-stat-number">{{ confirmed_count }}</div>
                <div class="admin-stat-label">Confirmed</div>
            </div>
            <div class="admin-stat">
                {% set active_count = users|filter(u => u.message_count > 0)|length %}
                <div class="admin-stat-number">{{ active_count }}</div>
                <div class="admin-stat-label">Active</div>
            </div>
            <div class="admin-stat">
                {% set total_smiles = users|reduce((carry, u) => carry + u.smiles_created, 0) %}
                <div class="admin-stat-number">{{ total_smiles }}</div>
                <div class="admin-stat-label">Smiles</div>
            </div>
        </div>
    </div>
</div>

{# Content #}
<div class="admin-content">
    <div class="admin-container">
        {# Filters #}
        <div class="filters-card">
            <h3>Filters</h3>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 32px;">
                <div class="filter-group">
                    <label class="filter-label">Email Status</label>
                    <div class="filter-buttons">
                        <button class="filter-btn active" onclick="filterUsers('all')">All</button>
                        <button class="filter-btn" onclick="filterUsers('confirmed')">Confirmed</button>
                        <button class="filter-btn" onclick="filterUsers('unconfirmed')">Unconfirmed</button>
                    </div>
                </div>
                <div class="filter-group">
                    <label class="filter-label">Minimum Smiles Sent</label>
                    <input type="number" class="form-input" placeholder="0" min="0" onchange="filterBySmiles(this.value)">
                </div>
            </div>
            <div class="filter-results">
                Showing <strong>{{ users|length }}</strong> of <strong>{{ users|length }}</strong> users
            </div>
        </div>

        {# Users Table #}
        <div class="users-table-card">
            <table class="users-table">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Confirmed</th>
                        <th>Smiles Sent</th>
                        <th>Dashboard URL</th>
                        <th>Created At</th>
                        <th>Last Activity</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="users-tbody">
                    {% for user in users %}
                    <tr data-confirmed="{{ user.email_confirmed }}" data-smiles="{{ user.message_count }}">
                        <td>
                            <div class="email-cell">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/>
                                </svg>
                                {{ user.email }}
                            </div>
                        </td>
                        <td>
                            <div class="confirmed-badge {{ user.email_confirmed ? 'yes' : 'no' }}">
                                {% if user.email_confirmed %}
                                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                                        <polyline points="20 6 9 17 4 12"/>
                                    </svg>
                                {% else %}
                                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                                        <path d="M18 6L6 18M6 6l12 12"/>
                                    </svg>
                                {% endif %}
                            </div>
                        </td>
                        <td>
                            <span class="smiles-count">{{ user.message_count }}</span>
                        </td>
                        <td>
                            <span class="dashboard-url">/{{ user.dashboard_url|slice(0, 8) }}</span>
                        </td>
                        <td>
                            <div style="display: flex; align-items: center; gap: 8px; color: var(--text-gray); font-size: 13px;">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <rect x="3" y="4" width="18" height="18" rx="2"/><path d="M16 2v4M8 2v4M3 10h18"/>
                                </svg>
                                {{ user.created_at|date('M j, Y') }}
                            </div>
                        </td>
                        <td>
                            <div style="display: flex; align-items: center; gap: 8px; color: var(--text-gray); font-size: 13px;">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/>
                                </svg>
                                {{ user.last_activity|date('M j, Y') }}
                            </div>
                        </td>
                        <td>
                            <button class="actions-menu" onclick="showActionsMenu('{{ user.email }}')">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="1"/><circle cx="12" cy="5" r="1"/><circle cx="12" cy="19" r="1"/>
                                </svg>
                            </button>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="7" style="text-align: center; padding: 60px 0; color: var(--text-gray);">
                            No users yet
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
function filterUsers(type) {
    // Update active button
    document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));
    event.target.classList.add('active');

    // Filter rows
    const rows = document.querySelectorAll('#users-tbody tr[data-confirmed]');
    let visibleCount = 0;

    rows.forEach(row => {
        const confirmed = row.dataset.confirmed === '1';
        let show = true;

        if (type === 'confirmed' && !confirmed) show = false;
        if (type === 'unconfirmed' && confirmed) show = false;

        row.style.display = show ? '' : 'none';
        if (show) visibleCount++;
    });

    updateFilterResults(visibleCount);
}

function filterBySmiles(min) {
    const rows = document.querySelectorAll('#users-tbody tr[data-smiles]');
    let visibleCount = 0;

    rows.forEach(row => {
        const smiles = parseInt(row.dataset.smiles);
        const show = smiles >= (parseInt(min) || 0);

        row.style.display = show ? '' : 'none';
        if (show) visibleCount++;
    });

    updateFilterResults(visibleCount);
}

function updateFilterResults(count) {
    const total = document.querySelectorAll('#users-tbody tr[data-confirmed]').length;
    document.querySelector('.filter-results').innerHTML =
        `Showing <strong>${count}</strong> of <strong>${total}</strong> users`;
}

function showActionsMenu(email) {
    const actions = [
        `Send Reminder to ${email}`,
        `Reset Dashboard URL`,
        `Delete User`
    ];

    const action = prompt(`Actions for ${email}:\n1. Send Reminder\n2. Reset Dashboard\n3. Delete User\n\nEnter number:`);

    if (action === '1') sendReminder(email);
    else if (action === '2') resetDashboard(email);
    else if (action === '3') deleteUser(email);
}

async function sendReminder(email) {
    if (!confirm(`Send reminder email to ${email}?`)) return;

    try {
        const response = await fetch('/api/admin/send-reminder', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email })
        });

        const result = await response.json();

        if (result.success) {
            alert('Reminder sent!');
        } else {
            alert('Error: ' + (result.message || 'Failed to send reminder'));
        }
    } catch (error) {
        console.error('Error:', error);
        alert('An error occurred');
    }
}

async function resetDashboard(email) {
    if (!confirm(`Reset dashboard URL for ${email}? Their old link will stop working.`)) return;

    try {
        const response = await fetch('/api/admin/reset-creation', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email })
        });

        const result = await response.json();

        if (result.success) {
            alert('Dashboard URL reset! They will receive an email with the new link.');
        } else {
            alert('Error: ' + (result.message || 'Failed to reset'));
        }
    } catch (error) {
        console.error('Error:', error);
        alert('An error occurred');
    }
}

async function deleteUser(email) {
    if (!confirm(`Delete ${email} and all their messages? This cannot be undone.`)) return;

    try {
        const response = await fetch('/api/admin/delete-user', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email })
        });

        const result = await response.json();

        if (result.success) {
            alert('User deleted');
            location.reload();
        } else {
            alert('Error: ' + (result.message || 'Failed to delete'));
        }
    } catch (error) {
        console.error('Error:', error);
        alert('An error occurred');
    }
}
</script>
{% endblock %}
